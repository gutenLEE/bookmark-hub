{
  "manifest_version": 3,
  "name": "Bookmark-hub",
  "description": "Automatically integrate your bookmarks log to GitHub",
  "version": "1.0.0",
  "author" : "SUNGSU_DEV_LEE",

  "action" : {
    "default_popup" : "popup/popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation"
  ],

  "icons": {
    "48": "/assets/icons/48.png"
  },
  "content_security_policy": {
    "object-src": "self",
    "script-src-elem": "'self' https://www.jsdelivr.com/package/npm/@octokit/oauth-app"
  }
}