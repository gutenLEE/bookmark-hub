{
  "manifest_version": 3,
  "name": "Bookmark-hub",
  "description": "Automatically integrate your bookmarks log to GitHub",
  "version": "1.0.0",
  "author" : "SUNGSU_DEV_LEE",

  "action" : {
    "default_popup" : "popup/popup.html"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "icons": {
    "48": "/assets/icons/48.png"
  },
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self' https://www.jsdelivr.com/package/npm/@octokit/oauth-app",
    "script-scr" : "https://www.jsdelivr.com/package/npm/@octokit/oauth-app",
    "object-src": "self"
  }
}
